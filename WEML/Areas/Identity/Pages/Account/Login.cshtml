@page
@using WEML.Models
@model WEML.Areas.Identity.Pages.Account.LoginModel 
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
    var fontSize = ViewData["FontSize"];
}
<link rel="stylesheet" href="~/css/site.css" />

<style>
    :root {
        --font-title: @fontSize px;
        --font-h2: calc( @fontSize * 0.9px);
        --font-h3: calc( @fontSize * 0.8px);
        --font-paragraph: calc( @fontSize * 0.5px);
    }

    h1 {
        font-size: var(--font-title);
    }

    h3 {
        font-size: var(--font-h3);
    }

    p {
        font-size: var(--font-paragraph);
    }

    .card-title {
        font-size: var(--font-h2);
    }
</style>
<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" type="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" />
        <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>


@if (!ViewData.ModelState.IsValid)
{
    <h1>ERROR</h1>
    <div class="text-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}
