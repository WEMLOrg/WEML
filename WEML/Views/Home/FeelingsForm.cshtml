@{
    ViewData["Title"] = "Feelings Form";
}

<h2>Feelings Form</h2>

<form asp-action="SubmitFeeling" asp-controller="Home" method="post">
    <div class="form-group">
        <label for="FeelingName">Symptom Name</label>
        <input type="text" class="form-control" id="FeelingName" name="FeelingName" placeholder="Enter feeling name" required>
    </div>
    <div class="form-group">
        <label for="FeelingDescription">Description</label>
        <textarea class="form-control" id="FeelingDescription" name="FeelingDescription" rows="4" placeholder="What makes you feel like that?" required></textarea>
    </div>
    <div class="form-group">
        <label for="FeelingSeverity">Severity</label>
        <select class="form-control" id="FeelingSeverity" name="FeelingSeverity">
            <option>Mild</option>
            <option>Moderate</option>
            <option>Severe</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit Feeling</button>
</form>