@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WEML.Areas.Identity.Data.User

@{
    ViewData["Title"] = "Profile";
    var fontSize = ViewData["FontSize"];
}
<link rel="stylesheet" href="~/css/site.css" />

<style>
    :root {
        --font-title: @fontSize px;
        --font-h2: calc( @fontSize * 0.9px);
        --font-h3: calc( @fontSize * 0.8px);
        --font-paragraph: calc( @fontSize * 0.5px);
    }

    h1 {
        font-size: var(--font-title);
    }

    h3 {
        font-size: var(--font-h3);
    }

    p {
        font-size: var(--font-paragraph);
    }

    .card-title {
        font-size: var(--font-h2);
    }
</style>
<h2>User Profile</h2>

<div>
    <h5>Name: </h5>
    <p>@Model.FirstName @Model.LastName</p>
</div>
<div>
    <h5>Email: </h5>
    <p>@Model.Email</p>
</div>
<div>
    @* <h5>Date of Birth: </h5> *@
    @* <p>@Model.DateOfBirth.ToShortDateString()</p> *@
    <h5>Date of Birth: </h5>
    <p>@Model.DateOfBirth</p> @*numa asa mergea cu loginu idk*@
</div>
<div>
    <h5>Points: </h5>
    <p>@Model.numberOfPoints</p>
</div>
<div>
    <h5>Current Diagnosis: </h5>
    <p>@Model.currentDiagnosis</p>
</div>

<form asp-action="Logout" method="post">
    <button type="submit" class="btn btn-danger">Logout</button>
</form>
